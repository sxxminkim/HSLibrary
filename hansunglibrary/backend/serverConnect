const mysql=require('mysql2/promise')
async function runQuery(){
    const connection=await mysql.connection({
        host:'127.0.0.1',
        port:3305,
        user:'root',
        password:'ryuty1015',
        database:'hs_library'        
    });

    connection.connect((err)=>{
        if(err){
            console.error('Error Connecting to MySQL Databases : ' + err.stack)
            return;
        }
        console.log('Connected to MySQL databases with connection id '+connection.threadId)
    });
    connection.end();
}